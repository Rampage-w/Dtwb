<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/image_border_shape"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            >

            <!-- <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:gravity="right"
               android:text="用户签名"
               android:layout_marginTop="20dp"/> -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/image_shape"
                >

                <ImageView
                    android:id="@+id/aqjc_add_signImg"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/aqjc_add_text_sign"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:text="签字区域"
                    />
                <ImageView
                    android:id="@+id/aqjc_qianzi_del"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ico_del"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />
                <!-- 动态图 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/load1"
                    android:id="@+id/aqjc_add_qianziphotoInfoImg"/>
                <!-- 上传照片 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="正在上传照片..."
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:id="@+id/aqjc_add_qianziphotoInfo"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
