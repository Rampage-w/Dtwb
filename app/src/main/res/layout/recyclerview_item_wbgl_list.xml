<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_selector"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="top" >

        <LinearLayout
            android:id="@+id/item_wbgl_list_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 序号 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/item_wbgl_list_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="01"
                    android:textColor="#969696" />
            </LinearLayout>
            <!-- 设备 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
                <!-- 第一行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="注册代码"
                        android:textColor="#2a2a2a" />
                    <TextView
                        android:id="@+id/item_wbgl_list_zcdm"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="31103705232016052221"
                        android:textColor="#969696" />

                </LinearLayout>
                <!-- 第二行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="使用地点"
                        android:textColor="#969696" />

                    <TextView
                        android:id="@+id/item_wbgl_list_sbsydd"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="山东省东营市东营区济南路3dd号"
                        android:textColor="#969696" />

                </LinearLayout>
                <!-- 第三行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="维保日期"
                        android:textColor="#969696" />
                    <TextView
                        android:id="@+id/item_wbgl_list_Create_date"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="2017-11-09"
                        android:textColor="#969696" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <!-- list内容 -->
        <!-- 小拐图片 -->
        <LinearLayout
            android:id="@+id/item_wbgl_list_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/item_wbgl_list_arr"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@string/app_name"
                />
        </LinearLayout>
        <!-- 小拐图片 -->

        <!-- 点击加载下一页    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/wbgl_list_loadmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#969696"
                android:text="没有更多了"
                android:gravity="center"
                />
        </LinearLayout>

        <!-- 加载下一页结束 -->
    </RelativeLayout>
</LinearLayout>
