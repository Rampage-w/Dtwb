<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	>
    <LinearLayout 
		        android:layout_width="110dp"
		        android:layout_height="110dp"
		        android:orientation="horizontal"
		        android:layout_marginLeft="10dp"
		        android:layout_marginBottom="20dp"
		        android:layout_marginRight="10dp"
		        android:padding="5dp"
		        android:id="@+id/wbgl_photoLayout"
		        android:background="@drawable/image_border_shape"
		        	        		        
		        >
		        
        	<RelativeLayout 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    >
        
		        <LinearLayout 
		            android:layout_width="105dp"
			        android:layout_height="105dp"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:layout_marginLeft="20dp"
			        android:background="@drawable/image_shape"
			        android:orientation="vertical"
			        android:layout_centerInParent="true"
			        android:id="@+id/wbgl_picThumbLayout">

		            <TextView
		                android:id="@+id/aqjc_addlist_photoInjia"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="+"
		                android:gravity="center"
		                android:layout_gravity="center"
		                android:textColor="#c0c0c0"
		                android:textSize="48sp" />
		            		            
			    </LinearLayout>
			   <!-- 动态图 --> 
		       <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginTop="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginBottom="10dp"
	                android:src="@drawable/load1"
	                android:id="@+id/wbgl_photoInfoImg"/>
	           <!-- 上传照片 -->
	           <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dp"
	                android:text="正在上传照片..."
	                android:layout_centerInParent="true"
	                android:textColor="#000000"
	                android:textSize="8sp"
	                android:id="@+id/wbgl_photoInfo"/>
	           <!-- 删除照片 -->
	            <Button 
                   android:layout_width="18dp"
                   android:layout_height="18dp"
	               android:textColor="#FFFFFF"
	               android:layout_alignParentRight="true"
	               android:background="@drawable/ico_del"
	               android:id="@+id/wbgl_photoDel"/>
		        
			    <LinearLayout android:layout_width="140dp"
			        android:layout_height="105dp"
			        android:orientation="vertical"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:id="@+id/wbgl_photoInfoLayout"
			        >			        
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="0dp"
			            android:layout_weight="0.6"
			            android:orientation="horizontal"
			            android:layout_gravity="center">
			            
			        </LinearLayout>
			        			        
			    </LinearLayout>	
			   </RelativeLayout>	        
		    </LinearLayout>
</LinearLayout>
